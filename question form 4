	<title>Richard Walther</title>
	<style>
		body {
			font-family: Arial, sans-serif;
			margin: 0;
			padding: 0;
		}
		.container {
			max-width: 800px;
			margin: 0 auto;
			padding: 20px;
		}
		h1 {
			text-align: center;
		}
		.question {
			display: none;
			margin: 20px 0;
		}
		.buttons {
			display: flex;
			flex-wrap: wrap;
			justify-content: center;
			margin: 10px 0;
		}
		.buttons button {
			padding: 10px 20px;
			margin: 10px;
			border: none;
			border-radius: 5px;
			font-size: 18px;
			cursor: pointer;
			background-color: #0077CC;
			color: white;
			transition: background-color 0.3s ease-in-out;
		}
		.buttons button:hover {
			background-color: #005EA8;
		}
	</style>
	<script>
		function showQuestion(num) {
			document.getElementById("question"+num).style.display = "block";
		}
		function saveResponse(num, response) {
			localStorage.setItem("question"+num, response);
			showQuestion(num+1);
		}
		window.onload = function() {
			if (localStorage.getItem("question1")) {
				showQuestion(2);
				if (localStorage.getItem("question2")) {
					showQuestion(3);
				}
			}
		};
	</script>
</head>
<body>
	<div class="container">
		<h1>RICHARD WALTHER</h1>
		<div class="question" id="question1">
			<h2>What does a designer do?</h2>
			<div class="buttons">
				<button onclick="saveResponse(1, 'tell stories')">Tell stories</button>
				<button onclick="saveResponse(1, 'eye-catching visuals')">Eye-catching visuals</button>
				<button onclick="saveResponse(1, 'immersive experiences')">Immersive experiences</button>
			</div>
		</div>
		<div class="question" id="question2">
			<h2>What are you interested in?</h2>
			<div class="buttons">
				<button onclick="saveResponse(2, 'code')">Code</button>
				<button onclick="saveResponse(2, 'XR')">XR</button>
				<button onclick="saveResponse(2, 'project management')">Project management</button>
			</div>
		</div>
		<div class="question" id="question3">
			<h2>What's your style?</h2>
			<div class="buttons">
				<button onclick="saveResponse(3, 'light mode')">Light mode</button>
				<button onclick="saveResponse(3, 'dark mode (goth mode)')">Dark mode (goth mode)</button>
				<button onclick="saveResponse(3, 'accessible')">Accessible</button>
			</div>
		</div>
	</div>
</body>
